<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">215</argument>
                <argument name="logo_img_height" xsi:type="number">65</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="header-wrapper">
            <container htmlTag="div" htmlClass="top-header" after="logo">
                <container htmlTag="div" htmlClass="col-left">
                    <block class="\Magento\Framework\View\Element\Template" name="top-center-navigation-links"
                           template="Magento_Theme::html/header/top-center-navigation-links.phtml">
                        <block class="\Magento\Framework\View\Element\Template" name="store-locator-dropdown"
                               template="Magento_Theme::html/header/dropdowns/store-locator.phtml"/>
                    </block>
                </container>
                <container htmlTag="div" htmlClass="col-right">
                    <block class="Magento\Cms\Block\Block">
                        <arguments>
                            <argument name="block_id" xsi:type="string">nbs-top-right-navigation-links</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>
        <referenceBlock name="catalog.topnav">
            <block class="Magento\Cms\Block\Block" name="navigation-blocks">
                <arguments>
                    <argument name="block_id" xsi:type="string">nbs-top-navigation-blocks</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="misc-navigation-blocks">
                <arguments>
                    <argument name="block_id" xsi:type="string">nbs-top-misc-navigation-blocks</argument>
                </arguments>
            </block>
            <container name="topmenu-promotions"/>
        </referenceBlock>
        <referenceContainer name="cms_footer_links_container">
            <block class="Magento\Cms\Block\Block">
                <arguments>
                    <argument name="block_id" xsi:type="string">nbs-footer-links</argument>
                </arguments>
            </block>

        </referenceContainer>

        <move element="copyright" destination="before.body.end"/>
        <referenceBlock name="store_switcher" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="wish-list-link" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceContainer name="header.panel" remove="true"/>
        <referenceContainer name="header.panel.wrapper" remove="true"/>
        <referenceContainer name="compare-link-wrapper" remove="true"/>
    </body>
</page>
